<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TableLayout
        android:id="@+id/cartTableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:isScrollContainer="true"
        android:stretchColumns="0"
        android:visibility="visible">

        <TableRow
            android:id="@+id/cartHeader"
            android:layout_width="fill_parent"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:visibility="visible">


            <TextView
                android:id="@+id/cartHeaderModel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:gravity="clip_horizontal|left"
                android:maxLines="1"
                android:padding="18dip"
                android:text="@string/cart_model_label"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cartHeaderQty"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="18dip"
                android:text="@string/cart_qty_label"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cartHeaderPrice"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:padding="18dip"
                android:text="@string/cart_price_label"
                android:textSize="16sp"
                android:textStyle="bold" />


        </TableRow>


        <TableRow
            android:id="@+id/cartTotalRow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/cartTotalLabel"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:padding="18dip"
                android:text="@string/cart_total_label"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cartEmptySpace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible" />

            <TextView
                android:id="@+id/cartTotalPrice"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:padding="18dip"
                android:text="@string/cart_price_test"
                android:textSize="20sp"
                android:textStyle="bold" />

        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/cartPayButton"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_weight="0"
        android:text="@string/cart_pay_button"
        android:textAlignment="center"
        android:layout_margin="15dp"/>

</LinearLayout>
